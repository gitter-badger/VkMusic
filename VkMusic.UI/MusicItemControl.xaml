<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfUI" x:Class="WpfUI.MusicItemControl" 
             mc:Ignorable="d" 
             d:DesignHeight="34.5" d:DesignWidth="158.667">
    <Grid>
        <TextBlock x:Name="textBlock" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Center"
                   FontWeight="Bold" Foreground="#FF5300A6" TextTrimming="CharacterEllipsis" Height="16" Margin="0,10,39,8"/>
        <local:PlayButton x:Name="playButton" VerticalAlignment="Center" HorizontalAlignment="Right" Width="52" Height="46" RenderTransformOrigin="0.5,0.5" Margin="0,-6,-11,-6">
            <local:PlayButton.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="0.7" ScaleY="0.7"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </local:PlayButton.RenderTransform>
        </local:PlayButton>
    </Grid>
</UserControl>
